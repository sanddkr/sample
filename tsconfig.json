{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "removeComments": true,
        "allowSyntheticDefaultImports": false,
        "jsx": "react",
        "outDir": "./distr/",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules", "distr", "jest"
    ]
}